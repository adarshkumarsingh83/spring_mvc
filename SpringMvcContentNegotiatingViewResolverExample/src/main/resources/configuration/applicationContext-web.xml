<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/mvc
                            http://www.springframework.org/schema/mvc/spring-mvc.xsd">


   <mvc:annotation-driven/>

    <!--  <mvc:default-servlet-handler />-->

     <bean class=" org.springframework.web.servlet.view.ContentNegotiatingViewResolver">

         <property name="order" value="1"/>

         <property name="useNotAcceptableStatusCode" value="false"/>

         <property name="contentNegotiationManager">
             <bean class="org.springframework.web.accept.ContentNegotiationManagerFactoryBean">
                 <property name="favorParameter" value="true"/>
                 <property name="favorPathExtension" value="true"/>
                 <property name="ignoreAcceptHeader" value="false"/>
                 <property name="defaultContentType" value="text/html"/>
                 <property name="parameterName" value="format"/>
                 <property name="useJaf" value="false"/>
                 <property name="mediaTypes">
                     <map>
                         <entry key="json" value="application/json"/>
                         <entry key="xml" value="application/xml"/>
                         <entry key="pdf" value="application/pdf"/>
                         <entry key="xls" value="application/vnd.ms-excel"/>
                     </map>
                 </property>
                 <property name="ignoreUnknownPathExtensions" value="false"/>
                 <property name="defaultContentTypeStrategy">
                     <bean class="org.springframework.web.accept.PathExtensionContentNegotiationStrategy">
                         <constructor-arg>
                             <map>
                                 <entry key="html" value="text/html"/>
                             </map>
                         </constructor-arg>
                     </bean>
                 </property>
             </bean>
         </property>

         <property name="viewResolvers">
             <list>
                 <bean class="com.adarsh.spring.web.viewresolver.Jaxb2MarshallingXmlViewResolver">
                     <constructor-arg name="marshaller">
                         <bean class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
                             <property name="packagesToScan" value="com.adarsh.spring.web.bean"/>
                         </bean>
                     </constructor-arg>
                 </bean>
                 <bean class="com.adarsh.spring.web.viewresolver.JsonViewResolver"/>
                 <bean class="com.adarsh.spring.web.viewresolver.PdfViewResolver"/>
                 <bean class="com.adarsh.spring.web.viewresolver.ExcelViewResolver"/>
                 <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
                   <property name="contentType" value="text/html"/>
                     <property name="prefix" value="/WEB-INF/views/"/>
                     <property name="suffix" value=".jsp"/>
                 </bean>
             </list>
         </property>

         <property name="defaultViews">
             <list>
                 <bean class="org.springframework.web.servlet.view.xml.MarshallingView">
                     <constructor-arg name="marshaller">
                         <bean class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
                             <property name="packagesToScan" value="com.adarsh.spring.web.bean"/>
                         </bean>
                     </constructor-arg>
                 </bean>
                 <bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView"/>
                 <bean class="com.adarsh.spring.web.viewresolver.PdfView"/>
                 <bean class="com.adarsh.spring.web.viewresolver.ExcelView"/>
             </list>
         </property>
     </bean>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

 </beans>